###############################################################################
#Example 4 for the Earth
#
#Deposited energy in atmosphere of 100 MeV normal incident 
#Normalisation per number of primary

#select  geometry

/control/verbose 1
/PLANETOCOS/GEOMETRY/verbose 1
/PLANETOCOS/GEOMETRY/SetMaxLayerThickness 5. km
/PLANETOCOS/GEOMETRY/SetMinLayerThickness .000000001 km
/PLANETOCOS/GEOMETRY/SetHeigthOfWorldAboveAtmosphere 100 km
/PLANETOCOS/GEOMETRY/SetPlanetCoreThickness 5 km
/PLANETOCOS/GEOMETRY/SetType Flat
/PLANETOCOS/GEOMETRY/SetAtmosphereTop 80. km
/PLANETOCOS/GEOMETRY/SetGroundAltitude 5. km
/PLANETOCOS/GEOMETRY/SetLayerLength 1000. km
/PLANETOCOS/GEOMETRY/SetAtmosphereModel NRLMSISE00
/PLANETOCOS/GEOMETRY/SetConsiderAtmosphere true
/PLANETOCOS/GEOMETRY/SetAp 10.
/PLANETOCOS/GEOMETRY/SetF107 100.
/PLANETOCOS/GEOMETRY/SetF107A 100.
/PLANETOCOS/GEOMETRY/SetReferenceDate 1995 12 12 10 0 0
/PLANETOCOS/GEOMETRY/SetReferencePosition 45. 45. degree
/PLANETOCOS/GEOMETRY/SetPercentOfDepth 5.

#
#Select detection altitude
#
/PLANETOCOS/GEOMETRY/RemoveAllDetectors

#
#No Soil
#

/PLANETOCOS/SOIL/ResetLayers

#
#Physics
# 
/PLANETOCOS/PHYSICS/SelectTypeOfHadronicPhysics QGSP_BIC_HP
/PLANETOCOS/PHYSICS/SelectTypeOfEMPhysics STANDARD

#Initialise
/PLANETOCOS/Initialise


/PLANETOCOS/BFIELD/SwitchOff


/PLANETOCOS/CUT/SetCutInDepthForAllAtmosphericLayers 1. g/cm2
/run/setCut 100. m
/run/particle/applyCuts true e-
/run/particle/applyCuts true gamma
/run/particle/applyCuts true e+
/run/particle/dumpCutValues







#edep histograms 
/PLANETOCOS/ANALYSIS/EDEP/AtmoEdepVsAltitudeHisto 1 500
/PLANETOCOS/ANALYSIS/EDEP/AtmoEdepVsDepthHisto 2 500

/gps/particle proton
/gps/energy 100. MeV 
/gps/direction 0. 0. -1.
/PLANETOCOS/SOURCE/SetPositionForFlatGeometry 0 0 100.01 km 
/tracking/verbose 0
/run/beamOn 1000

#
#For root version
#
/PLANETOCOS/ANALYSIS/SaveTree  edep_test.root  root / PER_PRIMARY



/PLANETOCOS/ANALYSIS/SaveTree edep_test.ascii ascii / PER_PRIMARY


