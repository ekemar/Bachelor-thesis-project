# Physics ---------------------------------------------------

/PLANETOCOS/PHYSICS/SelectTypeOfEMPhysics LOWENERGY
/PLANETOCOS/PHYSICS/SelectTypeOfHadronicPhysics QGSP_BIC_HP 
/PLANETOCOS/PHYSICS/SelectTypeOfIonHadronicPhysics BIC
/PLANETOCOS/PHYSICS/ConsiderElectromagneticNuclearPhysics true

# Initialize Geometry and Physics ---------------------------

/PLANETOCOS/Initialise

# B-Field ---------------------------------------------------

/PLANETOCOS/BFIELD/SwitchOn
/PLANETOCOS/BFIELD/SetStartDate 2014 12 30 12 0 0
/PLANETOCOS/BFIELD/SetInternalFieldModel IGRF
/PLANETOCOS/BFIELD/SetExternalFieldModel NOFIELD

/PLANETOCOS/USERLIMIT/SetMagnetoMaxStepLength .1 rplanet
/PLANETOCOS/STOPCONDITION/SetMaxTrackLength 100. rplanet
/PLANETOCOS/STOPCONDITION/SetMaxTrackDuration 100. second
/PLANETOCOS/INTEGRATION/SetPrecision 1e-5
/PLANETOCOS/INTEGRATION/SetG4MaxStep 5e-1 rplanet
/PLANETOCOS/INTEGRATION/SetDeltaIntersection 100 m

# Histograms Data -------------------------------------------

# information of complete event

/PLANETOCOS/ANALYSIS/COMPLETE_EVENT/CreateFluxRootFile proton_antarctica.root

# Cuts ------------------------------------------------------

/PLANETOCOS/CUT/SetCutInDepthForAllAtmosphericLayers 1e-2 g/cm2
/run/particle/applyCuts true all

# Stopping conditions ---------------------------------------

/PLANETOCOS/STOPCONDITION/SetStoppingEnergy e- 1 MeV
/PLANETOCOS/STOPCONDITION/SetStoppingEnergy e+ 1 MeV
/PLANETOCOS/STOPCONDITION/SetStoppingEnergy gamma 0.01 MeV
/PLANETOCOS/STOPCONDITION/SetStoppingEnergy proton 1 MeV
/PLANETOCOS/STOPCONDITION/SetStoppingEnergy alpha 1 MeV
/PLANETOCOS/STOPCONDITION/SetStoppingEnergy deuteron 1 MeV
/PLANETOCOS/STOPCONDITION/SetStoppingEnergy anti_proton 1 MeV
/PLANETOCOS/STOPCONDITION/SetStoppingEnergy neutron 1 MeV
/PLANETOCOS/STOPCONDITION/SetStoppingEnergy anti_neutron 1 MeV
/PLANETOCOS/STOPCONDITION/SetStoppingEnergy pi+ 1 MeV
/PLANETOCOS/STOPCONDITION/SetStoppingEnergy pi- 1 MeV
/PLANETOCOS/STOPCONDITION/SetStoppingEnergy pi0 1 MeV
/PLANETOCOS/STOPCONDITION/SetStoppingEnergy mu+ 1 MeV
/PLANETOCOS/STOPCONDITION/SetStoppingEnergy mu- 1 MeV

# Cosmic Ray ------------------------------------------------

/PLANETOCOS/RANDOM/FixTheSeedRandomly
/PLANETOCOS/RANDOM/SetRandomSeedAtRunStart false

/PLANETOCOS/SOURCE/RandomIsotropicDistribution proton.dat GEODETIC km degree 6367.4445 500 37 -77.89 -76.61 141.53 169.25 1000

# Save Files -----------------------------------------------

/PLANETOCOS/ANALYSIS/COMPLETE_EVENT/WriteFluxRoot


