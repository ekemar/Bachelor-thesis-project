# general control --------------------------------------------

/tracking/verbose 0
/control/verbose 1
/tracking/storeTrajectory 1
/vis/scene/create
/vis/scene/endOfEventAction accumulate

# define atmosphere ------------------------------------------

/PLANETOCOS/GEOMETRY/SetHeigthOfWorldAboveAtmosphere 50. rplanet

/PLANETOCOS/GEOMETRY/SetMaxLayerThickness 5. km
/PLANETOCOS/GEOMETRY/SetMinLayerThickness .000000001 km
/PLANETOCOS/GEOMETRY/SetType spherical
/PLANETOCOS/GEOMETRY/SetAtmosphereTop 20000. km
/PLANETOCOS/GEOMETRY/SetGroundAltitude 0.1 km
/PLANETOCOS/GEOMETRY/SetAtmosphereModel NRLMSISE00
/PLANETOCOS/GEOMETRY/SetAp 4.
/PLANETOCOS/GEOMETRY/SetF107 150
/PLANETOCOS/GEOMETRY/SetF107A 150
/PLANETOCOS/GEOMETRY/SetReferenceDate 2014 12 30 12 0 0
/PLANETOCOS/GEOMETRY/SetReferencePosition -77.25 155.39 degree
/PLANETOCOS/GEOMETRY/SetPercentOfDepth 1.
/PLANETOCOS/GEOMETRY/SetConsiderAtmosphere true

# Detection levels definition --------------------------------

/PLANETOCOS/GEOMETRY/DetectorAtAltitude 100 km
/PLANETOCOS/GEOMETRY/DetectorAtAltitude 95 km
/PLANETOCOS/GEOMETRY/DetectorAtAltitude 90 km
